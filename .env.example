# Itabashi Minutes Crawler Configuration

# Base URL for Itabashi Ward website
BASE_URL=https://www.city.itabashi.tokyo.jp

# Request delay in seconds (respect robots.txt and server load)
REQUEST_DELAY=1.0

# HTTP timeouts (seconds)
TIMEOUT_CONNECT=10
TIMEOUT_READ=30

# Retry and backoff
RETRIES=3
BACKOFF_BASE=1.0
BACKOFF_MAX=30.0

# Limits
MAX_PAGES=2
MAX_ITEMS=50

# Logging and UA
LOG_LEVEL=INFO
USER_AGENT=ItabashiMinutesBot/0.1 (+contact)

# URL allow/deny patterns
ALLOW_PATTERN=^https?://[^/]+/gikai/kaigiroku/.*
DENY_PATTERNS=\.zip$,\.csv$
