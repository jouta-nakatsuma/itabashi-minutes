# 板橋区議会会議録クローラー設定
# Itabashi Minutes Crawler Configuration

# Base URL for Itabashi Ward website
ITABASHI_BASE_URL=https://www.city.itabashi.tokyo.jp

# Request delay in seconds (respect robots.txt and server load)
REQUEST_DELAY=1.0

# Maximum pages to crawl per session
MAX_PAGES=100

# Target fiscal year (leave empty for current/latest)
TARGET_FISCAL_YEAR=

# Output directory for crawled data
OUTPUT_DIR=./data

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# User agent string
USER_AGENT=ItabashiMinutesCrawler/1.0 (Research Purpose)

# Timeout for HTTP requests (seconds)
REQUEST_TIMEOUT=30